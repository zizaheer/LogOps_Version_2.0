@{
    ViewData["Title"] = "Home Page";
}

<!-- Driver block-->
<div class="driver-block hide-block">
    <div class="driver-header">
        <div class="row">
            <div class="col-8 padding-sm">
                <div class="form-check-inline">
                    <input type="checkbox" class="form-check-input chk-select-driver" name="driver-group" onchange="toggleDriverCheckbox()">
                    <label class="form-check-label"><strong>Amin mia</strong></label>
                </div>
            </div>
            <div class="col-4 no-padding text-right ">
                <div class="btn-group btn-group-sm margin-top-xs margin-right-xs" role="group" aria-label="order-action">
                    <button class="btn-sm btn-primary btn-unique driver-block-icon btn-pickup" title="Pick up" data-toggle="modal">
                        <i class="fa fa-arrow-circle-up"></i>
                    </button>
                    <button class="btn-sm btn-warning driver-block-icon btn-passon" title="Pass on" data-toggle="modal">
                        <i class="fa fa-arrow-circle-right"></i>
                    </button>
                    <button class="btn-sm btn-success driver-block-icon btn-deliver" title="Deliver" data-toggle="modal">
                        <i class="fa fa-check-circle"></i>
                    </button>
                    <button type="button" class="btn-sm btn-danger driver-block-icon btn-remove-driver margin-left-lg" data-driverid="" title="Deliver">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <table class="table-striped" style="width:100%;">
        <thead class="allocated-order-header">
            <tr>
                <th style="width:60px" class="padding-sm">W/B#</th>
                <th style="width:30px">SVC</th>
                <th style="width:50px">UNIT</th>
                <th style="width:80px">SHIPPER</th>
                <th>CONSIGNEE</th>
                <th>TYPE</th>
                <th>STATUS</th>
            </tr>
        </thead>
        <tbody class="allocated-order-body">
            <tr>
                <td style="width:60px">
                    <div class="form-check-inline">
                        <input class="form-check-input" type="radio" name="rdoWaybillNo" id="chkWayBillNumber" data-orderid="" data-waybillnumber="" />
                        <a class="btnEdit" href="#" data-waybillnumber='' data-toggle="modal" style="cursor:pointer"><label class="form-check-label" style="cursor:pointer">307905</label></a>
                    </div>
                </td>

                <td style="width:30px">SMD</td>
                <td style="width:50px">
                    2 SKD; 2 pc
                </td>
                <td title="">
                    <span class="d-inline-block text-truncate" style="max-width: 75px;">
                        Praeterea iter est quasdam res quas ex communi.
                    </span>
                </td>
                <td  title="">
                    <span class="d-inline-block text-truncate" style="max-width: 75px;">
                        Praeterea iter est quasdam res quas ex communi.
                    </span>
                </td>
                <td><span title="S: Single Order; R: Return Order">S</span></td>
                <td>D</td>
            </tr>
            
        </tbody>
    </table>

</div>


