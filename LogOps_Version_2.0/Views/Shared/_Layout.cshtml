<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LogOps_Version_2._0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <script src="https://kit.fontawesome.com/1e190ab9ad.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <div class="header-bar">
            <div class="client-logo-area">
                <img src="~/lib/logo/mfi-logo-main.jpg" />
                <label> Millenium Freightways Inc. </label>
            </div>
        </div>
        <div class="header-menu">
            <div class="row">
                <div class="col-1 no-padding">
                    <div class="row">
                        <div class="col-4 no-padding">
                            <img src="~/lib/icons/dashboard.png" style="width:40px; height:auto" />
                        </div>
                    </div>
                </div>
                <div class="col-10 no-padding">
                    <div class="row">
                        <div class="col-2 no-padding">
                            @*<img src="~/lib/icons/dashboard.png" />*@
                            <i class="fas fa-expand-arrows-alt fa-md"></i> <a href="#" class="padding-sm"> Dispatch board</a> <a href="#"> <i class="fas fa-caret-down"></i> </a>

                        </div>
                        <div class="col-4 no-padding">
                            <img src="~/lib/icons/dashboard.png" />
                            <a href="#" class="padding-sm">Dispatch board</a>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>
        </ul>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - LogOps_Version_2._0 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
